<p id="notice"><%= notice %></p>

<% provide(:title, @location.org_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @location.org_name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @location.jobs.any? %>
    <h3>Jobs <%= @location.jobs.count %></h3>
        <ol class="jobs">
          <%= render @jobs %>
        </ol>
        <%= will_paginate @jobs %>
        <% end %>
  </div>
</div>

<%= form_for([@location, @location.jobs.build]) do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :text %>
      <%= f.text_area :text %>
    </p>

    <div class="field">
      <%= f.label :date %>
      <%= f.datetime_select :date %>
    </div>

    <label for="field">Type:</label>
    <%= f.radio_button :job_type, 'hospital' %>
    <%= f.label :job_type, 'Hospital', :value => 'hospital' %>
    <%= f.radio_button :job_type, 'school' %>
    <%= f.label :job_type, 'School', :value => 'school' %>
    <%= f.radio_button :job_type, 'church' %>
    <%= f.label :job_type, 'Church', :value => 'church' %>
    <%= f.radio_button :job_type, 'animal shelter' %>
    <%= f.label :job_type, 'Animal shelter', :value => 'animal shelter' %>

    <p>
      <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
