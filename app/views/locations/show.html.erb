<p id="notice"><%= notice %></p>

<% provide(:title, @location.org_name) %>
<div class="row">
  <aside>
    <section class="user_info">
      <h1>
        <%= @location.org_name %>
      </h1>
    </section>
  </aside>
  <div>
    <% if @location.jobs.any? %>
    <h3>Jobs <%= @location.jobs.count %></h3>
        <ol class="jobs">
          <%= render @jobs %>
        </ol>
        <%= will_paginate @jobs %>
        <% end %>
  </div>
</div>

<%= render 'jobform'%>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
